@{
    ViewData["Title"] = "Ingreso - Empleados";
}
@model MVCBasic.Models.Empleado
<h1>Ingresa a tu cuenta</h1>
<form asp-action="Login" asp-controller="Empleado" method="post">
    <div class="form-group">
        <label asp-for="NumeroLegajo" class="control-label"></label>
        <input asp-for="NumeroLegajo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="password" class="control-label"></label>
        <input type="password" asp-for="password" class="form-control" />
        @if (!string.IsNullOrEmpty(ViewData["LoginError"] as string))
        {
            <span class="text-danger">@ViewData["LoginError"]</span>
        }
    </div>
    <div class="form-group">
        <input type="submit" value="Enviar" class="btn btn-primary" />
    </div>
</form>
@model MVCBasic.Models.Cliente

@{
    ViewData["Title"] = "Usuario - Registrarse";
}
        <div class="body-login">
            <div class="main-login">
                <input type="checkbox" id="chk" aria-hidden="true">

                <div class="signup">
                    <form asp-action="Register" asp-controller="Cliente" method="post">
                        <label class="label-login" for="chk" aria-hidden="true">Registrarse</label>
                        <input class="input-login" type="text" required asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <input class="input-login" type="email" required asp-for="Nombre" class="form-control" placeholder="Nombre" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                        <input class="input-login" type="text" required asp-for="Apellido" class="form-control" placeholder="Apellido" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                        <input class="input-login" type="text" required asp-for="Telefono" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                        <input class="input-login" type="text" required asp-for="password" class="form-control" placeholder="Telefono" />
                        <span asp-validation-for="password" class="text-danger"></span>
                        @if (!string.IsNullOrEmpty(ViewData["Mensaje"] as string))
                        {
                            <span class="text-danger">@ViewData["Mensaje"]</span>
                        }
                        <button class="button button-primary">Obtener cuenta</button>
                    </form>
                </div>

                <div class="login">
                    <form asp-action="Login" asp-controller="Cliente" method="post">
                        <label class="label-login" for="chk" aria-hidden="true">Iniciar sesión</label>
                        <input class="input-login" required type="email" asp-for="Email" class="form-control" placeholder="Email" />
                        <input class="input-login" required type="password" asp-for="password" class="form-control" placeholder="Password" />
                        @if (!string.IsNullOrEmpty(ViewData["LoginError"] as string))
                        {
                            <span class="text-danger">@ViewData["LoginError"]</span>
                        }
                        <button class="button button-primary">Iniciar sesión</button>
                    </form>
                </div>
            </div>
        </div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
